.container{
  min-height: 100%;
  overflow: hidden;
  overflow-y: hidden;
}

.my-avatar-warp{
    background: linear-gradient(#ff0a94,#f666b7);
}
.my-avatar{
    justify-content:space-between;
    border-top: 1px solid #ff0a94;
}
.my-avatar-warp .avatar-box{
    width:160rpx;
    height:160rpx;
    border-radius:50%;
    overflow:hidden;
    margin-right: 0;

}
.my-avatar-warp .weui-media-box__title{
    text-align: center;
    color: #fff;
}
.nick-name-warp{
    display: flex;
    align-items: center;
    padding: 30rpx;
}
.border-left{
    border-left: 2rpx solid #ededed;
}
.score-record-box{
    display: flex;
    justify-content: flex-end;
    color: #fff;
    font-size: 34rpx;
}
.score-desc-warp{
    padding: 30rpx;
    color: #fff;
    display: flex;
    justify-content: space-around;
}
.score-desc-remain,.score-desc-total,.score-desc-wait{
    text-align: center;
}

.score-remain-text,.score-total-text,.score-wait-text{
    font-size: 26rpx;
}




.score-exchange{
    display: flex;
    align-items: center;
    justify-content: flex-start;
}
.my-service-item{
    width:100%;
    background-color:#fff;
}
.service-item-title{
    height: 100rpx;
    line-height: 100rpx;
    border-bottom: 1rpx solid #eee;
    padding: 0 30rpx;
}
.service-item-box{
    font-size: 28rpx;
    padding: 30rpx;
}
.service-item-box view{
    padding: 30rpx 0;
}

page{
    background-color: #eee;
}
.weui-cells{
    font-size: 34rpx;
}

