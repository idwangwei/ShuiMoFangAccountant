<view class="container">
    <form bindsubmit="bindSave">
        <view style="padding: 30rpx;background-color:#fff">申请人基本信息</view>
        <view class="form-box">
            <view class="row-wrap">
                <view class="label">联系人</view>
                <view class="label-right">
                    <input name="linkMan" class="input" type="text" placeholder="姓名"
                           value="{{userName}}"/>
                </view>
            </view>
            <view class="row-wrap">
                <view class="label">手机号码</view>
                <view class="label-right">
                    <input name="mobile" class="input" maxlength="11" type="number" placeholder="11位手机号码"
                           value="{{telNumber}}"/>
                </view>
            </view>
            <view class="row-wrap">
                <view class="label">验证码</view>
                <view class="label-right">
                    <input name="code" class="input" maxlength="6" type="number" placeholder="6位验证码"
                           value="{{codeNumber}}"/>
                </view>
            </view>
            <view class="row-wrap">
                <view class="label">选择地区</view>
                <picker mode="multiSelector"
                        bindchange="bindMultiPickerChange"
                        bindcolumnchange="bindMultiPickerColumnChange"
                        value="{{multiIndex}}"
                        range="{{multiArray}}">

                    <view class="picker">
                        {{multiArray[0][multiIndex[0]]}}，{{multiArray[1][multiIndex[1]]}}，{{multiArray[2][multiIndex[2]]}}
                    </view>
                </picker>
            </view>
            <view class="row-wrap">
                <view class="label">选择服务项</view>
                <checkbox-group bindchange="checkboxChange">
                    <label class="checkbox" wx:for="{{serviceItems}}" wx:key="{{index}}">
                        <checkbox value="{{item.id}}" checked="{{item.checked}}" />
                        {{item.name}}
                    </label>
                </checkbox-group>
            </view>

        </view>
        <view style="margin-top: 30rpx;padding: 30rpx;background-color:#fff">申请人提交证件</view>
        <view class="form-box">
            <view class="row-wrap">
                <view class="label">身份证号</view>
                <view class="label-right">
                    <input name="idcard" class="input" type="idcard" placeholder="输入身份证号码"
                           value="{{idCardNum}}"/>
                </view>
            </view>
            <view class="row-wrap upload-pic-box">
                <view>身份证正面：</view>
                <image mode="widthFix" class="choose-img" data-type="idcard_0" src="{{idCardSrc[0]}}" bindtap="chooseAndSavePic"></image>
                <!--<view class="example-img" data-id="1" bindtap="showBigExampleSrc">查看图片示例</view>-->
            </view>
            <view class="row-wrap upload-pic-box">
                <view>身份证反面：</view>
                <image mode="widthFix" class="choose-img" data-type="idcard_1" src="{{idCardSrc[1]}}" bindtap="chooseAndSavePic"></image>
                <!--<view class="example-img" data-id="2" bindtap="showBigExampleSrc">查看图片示例</view>-->
            </view>
            <view class="row-wrap upload-pic-box">
                <view>从业资格证：</view>
                <image mode="widthFix" class="choose-img" data-type="certificate" src="{{certificateSrc}}" bindtap="chooseAndSavePic"></image>
                <!--<view class="example-img" data-id="3" bindtap="showBigExampleSrc">查看图片示例</view>-->
            </view>

        </view>
        <view style="display: flex;">
            <button type="default" bindtap="saveInfoToLocal">保存</button>
            <button type="default" formType="submit">申请</button>
        </view>
    </form>
</view>