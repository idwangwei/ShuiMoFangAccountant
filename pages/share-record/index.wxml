<view class=" page">

    <view class="page__bd">
        <view class="weui-tab">
            <view class="weui-navbar">
                <block wx:for="{{tabs}}" wx:key="*this">
                    <view id="{{index}}" class="weui-navbar__item {{activeIndex == index ? 'weui-bar__item_on' : ''}}"
                          bindtap="tabClick">
                        <view class="weui-navbar__title">{{item.desc}}</view>
                    </view>
                </block>
                <view class="weui-navbar__slider"
                      style="left: {{sliderLeft}}px; transform: translateX({{sliderOffset}}px); -webkit-transform: translateX({{sliderOffset}}px);">
                </view>
            </view>

            <view class="weui-tab__panel">
                <!--我的推广-->
                <view wx:if="{{activeIndex == 0}}" class="share-data-box">
                    <view >
                        <text>推广人</text>
                        <text>邀请人</text>
                        <text>获得积分</text>
                        <text>推广时间</text>
                    </view>
                    <view wx:for="{{shareData}}">
                        <text>{{item.from}}</text>
                        <text>{{item.to}}</text>
                        <text>{{item.score}}</text>
                        <text>{{item.date}}</text>
                    </view>
                </view>
                <!--推广海报-->
                <view wx:elif="{{activeIndex == 1}}">
                    推广海报
                </view>
                <!--推广规则-->
                <view wx:else>
                    规格规则
                </view>

            </view>
        </view>
    </view>
</view>