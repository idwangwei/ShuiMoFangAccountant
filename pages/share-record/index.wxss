
page {
    background-color: #FFFFFF;
}

image {
    margin: 4px 0;
}

.share-data-box {
    padding-top:32rpx;
    font-size: 26rpx;
}

.share-data-box .box-title {
    color: #444444;
    font-size: 32 rpx;
    display: flex;
}

.title-item {
    flex: 1;
    text-align: center;
}
.list-item-box{
    color: #444444;
    font-size: 28 rpx;
    display: flex;
}
.list-item{
    flex: 1;
}

.title-bg-box{
    width: 100vw;
    height: 54vw;
    display: flex;
    justify-content: center;
    align-items: flex-end;
    background-color: #ff0a94;
    overflow: hidden;
}
.title-bg-box image{
    width: 55vw;
    height: auto;
    margin-bottom:-6vw;
}
.weui-navbar__slider{
    width: 50px;
    background-color: #ff0a94;
}
.weui-bar__item_on{
    color: #ff0a94!important;
}
.weui-navbar {
    border-bottom:12rpx solid #dfdfdf
}
.weui-tab__panel{
    padding-top: 60px;
}
.share-form-title-box{
    display: flex;
    margin-bottom:16rpx;
}
.share-form-title{
    display: flex;
    flex-direction: column;
    align-items: center;
    flex:1;
}
.title-img-box{
    border-radius:50%;
    border:1px solid #ccc;
    width:70px;
    height:70px;
    display:flex;
    justify-content:center;
    align-items:center;
}
.title-img-box image{
    width: 32px;
    height: 32px;
    display: inline-block;
}
.share-form-row{
    display: flex;
    justify-content: center;
    padding: 0;
    color: #7e7e7e;
}
.flex-1{
    flex: 1;
    text-align: center;
}