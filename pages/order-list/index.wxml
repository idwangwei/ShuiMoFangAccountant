<view class=" page">

    <view class="page__bd">
        <view class="weui-tab">
            <view class="weui-navbar">
                <block wx:for="{{tabs}}" wx:key="*this">
                    <view id="{{index}}" class="weui-navbar__item {{activeIndex == index ? 'weui-bar__item_on' : ''}}" bindtap="tabClick">
                        <view class="weui-navbar__title">{{item.desc}}</view>
                    </view>
                </block>
                <view class="weui-navbar__slider" style="left: {{sliderLeft}}px; transform: translateX({{sliderOffset}}px); -webkit-transform: translateX({{sliderOffset}}px);"></view>
            </view>

            <view class="weui-tab__panel">

                <view class="no-order" hidden="{{orderList[activeIndex].length ? true : false}}">
                    <image src="/images/no-order.png" class="no-order-img"></image>
                    <view class="text">暂无订单</view>
                </view>


                <view class="weui-form-preview order-list-item" wx:for="{{orderList[activeIndex]}}" wx:key="*this"
                      bindtap="orderDetail"
                      data-status="{{item.serveStatus}}"
                      data-index="{{index}}">

                    <view class="weui-form-preview__bd">
                        <view class="weui-form-preview__item display-between">
                            <view class="weui-form-preview__label item-color-name">订单奖励积分</view>
                            <view class="item-color-name">
                                <text>￥{{item.price||100}}</text>
                                <view class="arrow-right"></view>
                            </view>
                        </view>
                        <view class="weui-form-preview__item">
                            <view class="weui-form-preview__label">订单名称：</view>
                            <view class="weui-form-preview__value">{{item.prodName}}</view>
                        </view>
                        <view class="weui-form-preview__item">
                            <view class="weui-form-preview__label">订单号：</view>
                            <view class="weui-form-preview__value">{{item.id}}</view>
                        </view>
                        <view class="weui-form-preview__item">
                            <view class="weui-form-preview__label">{{item.createTime}}</view>
                            <view class="weui-form-preview__value">{{item.statusDesc}}</view>
                        </view>

                    </view>
                    <view class="weui-form-preview__ft " style="line-height: 64rpx">
                        <view class="weui-form-preview__item order-item-bottom"
                              wx:if="{{item.serveStatus === 'WAIT'}}">

                            <view class="weui-form-preview__label check-btn-box"
                                  style="background-color: #b4b4b4;"
                                  data-is-receive="0"
                                  catchtap="orderReceive">忽略</view>
                            <view class="weui-form-preview__label check-btn-box"
                                  style="background-color: #4ea152;color: #ffffff"
                                  data-is-receive="1"
                                  catchtap="orderReceive">接受</view>
                        </view>

                        <view class="weui-form-preview__item order-item-bottom"
                              wx:elif="{{item.serveStatus === 'SERVING'}}"
                              data-serve-status="{{item.serveStatus}}"
                              data-check-status="{{item.checkStatus}}"
                              data-order-id="{{item.id}}"
                              catchtap="applyCheck">

                            <view class="weui-form-preview__label">申请校验</view>
                            <view class="weui-form-preview__label">
                                <view>
                                    {{item.checkStatusDesc}}
                                    <view class="arrow-right"></view>
                                </view>
                            </view>
                        </view>

                        <view class="weui-form-preview__item order-item-bottom"
                              wx:else
                              data-serve-status="{{item.serveStatus}}"
                              data-check-status="{{item.checkStatus}}"
                              data-order-id="{{item.id}}"
                              catchtap="applyCredit">

                            <view class="weui-form-preview__label">积分申请</view>
                            <view class="weui-form-preview__label">
                                <view>
                                    {{item.creditStatusDesc}}
                                    <view class="arrow-right"></view>
                                </view>
                            </view>
                        </view>

                    </view>
                </view>

            </view>
        </view>
    </view>
</view>