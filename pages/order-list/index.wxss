page{
    background-color: #F2f2f2;
}
.container{
    width: 100%;
    background-color: #F2f2f2;
}

.no-order{
    width: 100%;
    position: absolute;
    bottom: 0;
    top: 88rpx;
    left: 0;
    right: 0;
    text-align: center;
    padding-top: 203rpx;
    background-color: #F2f2f2;
}
.no-order-img{
    width: 81rpx;
    height: 96rpx;
    margin-bottom: 31rpx;
}
.no-order .text{
    font-size:28rpx;
    color:#999999;
    text-align: center
}

.check-btn-box{
    flex: 1;
    border-radius: 14rpx;
    text-align: center;
    text-align-last: center;
}


page,
.page,
.page__bd{
    height: 100%;
}
.page__bd{
    padding-bottom: 0;
}
.weui-navbar{
    background-color: #ffffff;
}
.weui-tab__panel{
    background-color:#F2f2f2;
    padding-top: 104px;
}
.weui-navbar__slider{
    background-color: #ff0a94;
}
.weui-navbar__title{
    font-size: 26rpx;
    max-width: initial;
    width: 100%;
    display: flex;
    align-items: center;
    flex-direction: column;
}
.weui-navbar__title .img-box{
    width: 120rpx;
    height:120rpx;
    border-radius: 50%;
    border: 2rpx solid #eee;
    display: flex;
    justify-content: center;
    align-items: center
}

.weui-navbar__item.weui-bar__item_on {
    color: #ff0a94;
}
.weui-navbar__item{
    padding: 10px 0;
}
.order-list-item{
    margin:15rpx 0;
    position:initial;
    display: flex;
    align-items: center;
}
.order-list-item .item-left{
    width: 40vw;
    height: 22.22vw;
    padding: 8rpx;
}
.order-list-item .item-left image{
    width: 100%;
    height: 100%;
}
.order-list-item .item-middle{
    width: 55vw;
}
.item-middle-title{
    font-size: 26rpx;
    font-weight: bold;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.item-middle-content{
    font-size: 20rpx;
    color: #8b8b8b;
    padding: 8rpx 8rpx 8rpx 0;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}
.item-middle-footer{
    font-size: 18rpx;
    color: #b4b4b4;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.item-middle-footer .footer-btn-wrap{
    display: flex;
}
.item-middle-footer .footer-btn{
    padding: 0 16rpx;
    font-size: 24rpx;
    border-radius:30rpx;
    color: #fff;
    background-color: #ff6600;
    margin-left: 10rpx;
}
.order-list-item .item-right{
    width: 5vw;
}

.display-between{
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.arrow-right{
    border-right: 4rpx solid #d6d6d6;
    border-top: 4rpx solid #d6d6d6;
    width:16rpx;
    height:16rpx;
    transform:rotate(45deg);
}