page{
    height: 100%;
}
.container{
    background-color: #f5f5f9;
    justify-content: initial;
}
.form-box{
    width:100%;
    background-color: #fff;
    padding-bottom: 50rpx;
}
.row-wrap{
    line-height: 88rpx;
    display: flex;
    font-size: 34rpx;
}
.row-wrap .label{
    width: 210rpx;
    color: #000
}
.row-wrap .label-right{
    flex: 1;
    height: 88rpx;
    line-height: 88rpx;
}
.row-wrap .label-right input{
    height: 100%;
    font-size: 28rpx;
    padding-right: 30rpx;
}
.row-wrap .right-box{
    margin-right: 30rpx; 
}
.save-btn,
.cancel-btn{
    width: 690rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    margin-top:30rpx; 
    border-radius: 6rpx;
    box-sizing: border-box;
}
.save-btn{
    background-color: #e64340;
    color:#fff;
}
button[type="default"]{
    background-color: #ffffff;
    color:#000;
}
.addr-details{
    height: auto;
    padding: 30rpx 0;
    margin-left:30rpx;
    border-bottom: 1rpx solid #eee;
    display: flex;
    font-size: 34rpx;
}
.addr-details .label{
    margin:auto 0 auto 0;
    width: 210rpx;
    color: #000
}
.addr-details textarea{
    box-sizing: border-box;
    width: 480rpx;
    overflow: scroll;
}
picker {
    min-width: 20rpx;
    height: 100%;
    margin-right: 20rpx;
}
.hui{
    color: #777;
}
.choose-img{
    width: 500rpx;
}
.upload-pic-box{
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 30rpx;
}
.id-card-box{
    border-radius: 30rpx;
    border: 4rpx dashed #b8b8b8;
    width: 600rpx;
    height: 400rpx;
}

.upload-pic-box image{
    width: 100%;
    height: 100%;
}
.upload-img-btn-box{
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    height: 100%;
}

checkbox-group{
    display: flex;
    flex-direction: column;
}
.certificate-item-box{
    padding: 20rpx 30rpx;
    font-size: 34rpx;
    background-color:#fff;
    display: flex;
    display: -webkit-box;
    display: -webkit-flex;
    justify-content: space-between;
    -webkit-justify-content: space-between;
}
.border-bottom-line{
    border-bottom: 1px solid #eaeaea;
}